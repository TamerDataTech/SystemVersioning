@{
    SetTitle("Login"); 
    Layout = "_LoginLayout";
}


<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto mt-5">

        <form class="form">
            <div class="card card-login card-hidden">
                <div class="card-header card-header-warning text-center">
                    <h4 class="card-title">@Translate("Login")</h4>
                </div>
                <div class="card-body " id="login-panel">
                    <input type="hidden" id="return-url" value="@ViewBag.ReturnUrl" name="ReturnUrl" />
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="material-icons">face</i>
                                </span>
                            </div>
                            <input type="text" class="form-control" placeholder="@Translate("Username")" id="username" name="Username" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="material-icons">lock_outline</i>
                                </span>
                            </div>
                            <input type="password" class="form-control" placeholder="@Translate("Password")" id="password" name="Password" required>
                        </div>
                    </div>
                </div>
                <div class="card-footer justify-content-center">
                    <button type="button" class="btn btn-primary btn-login"><i class="fa fa-lock-open"></i> @Translate("Login")</button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts
{
    <script src="~/js/user/login.js" asp-append-version="true"></script>
}